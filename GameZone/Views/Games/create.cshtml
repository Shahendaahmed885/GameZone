
@model creategameformviewmodel

@{
    ViewData["Title"] = "Add Game";
}
<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new game 
    </h5>


    <form asp-controller="Games"  enctype="multipart/form-data">
        
        <div class="row">

            <div class="col-md-6">
               
            <label asp-for="Name" class="form-label mt-4"></label>
            <input type="text" class="form-control" asp-for="Name"  placeholder="Name">
            <span asp-validation-for="Name" class="text-danger d-block"></span>


            <label asp-for="categoryid" class="form-label mt-4"></label>
            <select class="form-select"asp-for="categoryid"asp-items="Model.categories"
            data-placeholder="Select a category" data-minimum-results-for-search="Infinity">
                <option value=""></option>
            </select>
            <span asp-validation-for="categoryid" class="text-danger d-block"></span>


             <label asp-for="selecteddevices" class="form-label mt-4"></label>
             <select class="form-select" asp-for="selecteddevices" asp-items="Model.devices"
                    data-placeholder="Select devices">
                  <option></option>

            </select>
            <span asp-validation-for="selecteddevices" class="text-danger d-block"></span>


            <label asp-for="description" class="form-label mt-4"></label>
            <textarea asp-for="description" class="form-control" placeholder="description"></textarea>
            <span asp-validation-for="description" class="text-danger d-block"></span>



            <label asp-for="cover" class="form-label mt-4"></label>
            <input type="file" class="form-control" asp-for="cover" 
             data-rule-extension="@FileSettings.AllowedExtention.Replace(".",string.Empty)"
            data-msg-extension="not allowed extension"
            data-rule-filesize="@FileSettings.MaxSizeFileInBytes"
            data-msg-filesize="Maximum allowed size is @(FileSettings.MaxSizeFileInMB)MB">
            
            <small  class="form-text text-muted">only @FileSettings.AllowedExtention files are allowed 
                with max size @(FileSettings.MaxSizeFileInMB)MB. </small>
            <span asp-validation-for="cover" class="text-danger d-block"></span>


            <button type="submit" class="btn btn-light text-black mt-4  d-block" > save </button>
            </div>
            <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
                <img class="cover-preview d-none"alt="cover"/>

            </div>
        </div>





    </form>


    @section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js"asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>

}
